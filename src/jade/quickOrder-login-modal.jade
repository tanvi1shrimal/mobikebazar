#quickOrderLogin.modal.fade.modal--fullxs(tabindex='-1', role='dialog')
	.modal-dialog(role='document')
		.modal-content
			.login-recovery-wrapper
				.login-wrapper
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							i.mb-icon-close.modal__close-icon
						h4.modal-title Quick Order Login
						p.modal-subtitle Get access to Bulk buy &amp; My orders
					.modal-body
						form.login-form(role="form")
							.row
								.col-sm-12
									.form-group
										span.input.input--hoshi
											input#email-field.input__field.input__field--hoshi(type='text')
											label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='email-field')
												span.input__label-content.input__label-content--hoshi Email 
								.col-sm-12
									.form-group
										span.input.input--hoshi
											input#password-field.input__field.input__field--hoshi(type='password')
											label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='password-field')
												span.input__label-content.input__label-content--hoshi Choose Password
								.col-sm-12
									.form-group.clearfix
										a.button.button--link.forgot-link.pull-right.recover-pw-link Forgot password?
								.col-sm-12
									.form-group
										label.control.control--checkbox Remember me
											input(type="checkbox")
											.control__indicator
								.col-sm-12.form-button
									a.button.button--primary-white.button--lg.btn-block.text-center(href= 'quickorder-page.html') LOGIN
								.col-sm-12.form-button
									.form-group.text-center.clearfix
										span.form-bottom-link New to mobike bazar? 
											a.button.button--link(href='signup.html')  Register Now
				.recover-pw-wrapper
					.modal-header
						//button.close(type='button', data-dismiss='modal', aria-label='Close')
							//-span(aria-hidden='true') Ã—
							i.mb-icon-close.modal__close-icon
						h4.modal-title Recover Password 
						p.modal-subtitle We will send you a recovery mail. Please enter your email ID
					.modal-body
						form.login-form(data-toggle="validator" role="form")
							.row
								.col-sm-12
									.form-group
										span.input.input--hoshi
											input#email-field.input__field.input__field--hoshi(type='text' data-error="Please enter email address" required)
											label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='email-field')
												span.input__label-content.input__label-content--hoshi Email
										.help-block.with-errors
							
								.col-sm-12.form-button
									button.button.button--primary-white.button--lg.btn-block recover password
								.col-sm-12.form-button
									.form-group.clearfix
										.text-center
											a.button.button--link.login-go-back(href='#') LOGIN