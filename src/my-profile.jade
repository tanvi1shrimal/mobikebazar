					form(role='form').col-sm-6.col-sm-offset-3.bike-register__form
						.row
							.col-sm-12
								.form-group
									span.input.input--hoshi
										input(type='text').input__field.input__field--hoshi
										label(for='number').input__label.input__label--hoshi-color-1.input__label--hoshi
											span.input__label-content--hoshi.input__label-content Engine Number
					.text-center.clear
