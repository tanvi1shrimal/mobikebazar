	#register-bike-final-reg.modal.bike-register.modal--fullxs.fade(role='dialog', tabindex="-1")
		.modal-dialog.modal__dialog
			.modal-content.modal__content
				.modal-header
					button(type='button' data-dismiss='modal').close.close.close--closebike
						i.mb-icon-close.modal__close-icon
					h4.modal-title.modal__title Register your vehicle
