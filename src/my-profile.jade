													path.checkmark__check(fill='none', d='M14.1 27.2l7.1 7.2 16.7-16.8')
						#step-2.setup-content.tabpanel.tab-pane
							h3.bike-brand__title.text-center Select your Model
							.bike-scrollbox.clearfix
								.bike-container.bike-brand__wrap.clearfix.col-sm-10.col-sm-offset-1
									.col-sm-6.bike-brand__model
										a(href='#').bike-brand__bike-link.bike-next-2
											img(src='img/bike-brands/thunder-bird.png').bike-brand__bike-image.img-responsive
											h3.bike-brand__bike-title Thunderbird 350
											.bike-brand__overlay
