body.no-overflow.my-orders
	//START: Header
	include jade/header-after-login.jade
	//START: Main
	main.main-orders.main-height

		//START: User Profile
		section.user-content
			span.user-account my account
			span.user-name Pankaj jain
			span.pull-right
				a(data-toggle="modal" data-target="#register-bike").register-bike-link register my bike
		
		//START: My Orders Tabs
		section.orders-tabs-container
			.container-fluid
				.row
					ul.order-options.hidden-xs
						li.order-options__list
							a.order-options__link(href="my-orders.html") my orders
						li.order-options__list
							a.order-options__link(href="my-wishlist.html") my wishlist
						li.order-options__list.active
							a.order-options__link(href="my-profile.html") my profile
						li.order-options__list
							a.order-options__link(href="my-address.html") my address
						li.order-options__list
							a.order-options__link(href="my-cashback.html") my cash back
					.col-sm-12.btn-holder.hidden-xs
						a(href='#').button.button--primary-white.button--lg logout
					h3.orders-title.text-center.visible-xs my profile
					.tabs-content.order-tabs

						
						// Tab panes
						.tab-content.orders-tab-content
							.col-sm-12
								h4.tabs-header My Account
								.row
									//Start My Profile Content
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#email-field.input__field.input__field--hoshi(type='email')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='email-field')
													span.input__label-content.input__label-content--hoshi Email
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#password-field.input__field.input__field--hoshi(type='password')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='password-field')
													span.input__label-content.input__label-content--hoshi Password
									.col-sm-4.profile-list
										a(data-toggle="modal" data-target="#changePasswordModal").change-password__btn change password
							.col-sm-12
								h4.tabs-header.tabs-header--general General Information
								.row
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#first-name.input__field.input__field--hoshi(type='text')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='first-name')
													span.input__label-content.input__label-content--hoshi First Name
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#last-name.input__field.input__field--hoshi(type='text')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='last-name')
													span.input__label-content.input__label-content--hoshi Last Name
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#mobile-number.input__field.input__field--hoshi(type='text')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='mobile-number')
													span.input__label-content.input__label-content--hoshi Mobile Number
							.col-sm-12
								.row
									.col-sm-4
										.form-group
											span.input.input--hoshi
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='dob')
													span.input__label-content.input__label-content--hoshi Date of Birth
												input#dob.input__field.input__field--hoshi(type='text')
									
									.col-sm-4
										.form-group
											span.input.input--hoshi
												input#locality.input__field.input__field--hoshi(type='text')
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='locality')
													span.input__label-content.input__label-content--hoshi Locality/Town
									.col-sm-4.profile-list--gender
										.form-group
											span.input__label.input__label--gender Gender
											label.control.control--radio.radio-inline
												| Male
												input(type='radio', name='radio', checked)
												.control__indicator
											label.control.control--radio.radio-inline
												| Female
												input(type='radio', name='radio')
												.control__indicator
							.col-sm-12
								.form-group
									span.input.input--hoshi
										input#user-bio.input__field.input__field--hoshi(type='text')
										label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='user-bio')
											span.input__label-content.input__label-content--hoshi Your Bio
							.col-sm-12.save-cancel-btns
								
								button(type='button').button.button--md.button--primary-white.save-btn save
								button(type='button').cancel-btn cancel

	//START: Footer cards
	include jade/footer-after-login.jade

	//START: Login Modal- User
	#changePasswordModal.modal.fade.modal--fullxs.modal--loginSignup(tabindex='-1', role='dialog')
		.modal-dialog(role='document')
			.modal-content
				.login-recovery-wrapper
					.login-wrapper
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-label='Close')
								i.mb-icon-close.modal__close-icon
							h4.modal-title Change Password 
						.modal-body
							form.login-form(data-toggle="validator" role="form")
								.row
									.col-sm-12
										.form-group
											span.input.input--hoshi
												input#email-field.input__field.input__field--hoshi(type='password' data-error="Please enter old password" required)
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='email-field')
													span.input__label-content.input__label-content--hoshi Enter Old Password *
											.help-block.with-errors
									.col-sm-12
										.form-group
											span.input.input--hoshi
												input#password-field.input__field.input__field--hoshi(type='password' data-error="Please enter new password" required)
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='password-field')
													span.input__label-content.input__label-content--hoshi Enter New Password *
											.help-block.with-errors
									.col-sm-12
										.form-group
											span.input.input--hoshi
												input#password-field.input__field.input__field--hoshi(type='password' data-error="Please re-enter new password" required)
												label.input__label.input__label--hoshi.input__label--hoshi-color-1(for='password-field')
													span.input__label-content.input__label-content--hoshi Re - Enter New Password *
											.help-block.with-errors


									.col-sm-12.form-button
										button.button.button--primary-white.button--lg.btn-block Change password
									.col-sm-12.form-button
										.form-group.clearfix
											.success-message Password Changed Succesfully!
						
	//START: Popup Bike Registarion
	#register-bike.modal.bike-register.modal--fullxs.fade(role='dialog', tabindex="-1" )
		.modal-dialog.modal__dialog
			.modal-content
				.modal-header
					button(type='button' data-dismiss='modal').close.close.close--closebike
						i.mb-icon-close.modal__close-icon
					h4.modal-title.modal__title Bike registration
				.modal-body.text-center
					p.bike-register__info Do you want to register your bike?
					.text-center
						a.button.button--primary-red.button--primary-red--border.button--md(data-toggle="modal" data-target="#register-bike-popup-2" data-dismiss='modal') lets do it now
					.text-center
						a.bike-register__later(href='#' data-dismiss='modal') i will do it later &gt;&gt;

	//START: Pop up bike brand variation
	#register-bike-popup-2.modal.modal--fullxs.fade(role='dialog', tabindex="-1")
		.modal-dialog.modal__dialog
			.modal-content
				.modal-header.modal--header
					
					button(type='button' data-dismiss='modal').close.close--closebike
						i.mb-icon-close.modal__close-icon
					h4.modal-title.modal__title Register your vehicle


				.modal-body.modal__body
					
					//START: Wizard Steps 
					form#msform1.bike-stepwizard
						ul#progressbar.bike-stepwizard__row.setup-panel
							li.bike-stepwizard__step.bike-stepwizard__step--first.current-step(data-step-name="step-1")
								a(href='#step-1' aria-controls="step-1" role="tab" data-toggle="tab").bike-stepwizard__link.active
									i.fa.fa-check
								p.bike-stepwizard__option.active brand

							li.bike-stepwizard__step(data-step-name="step-2")
								a(href='#step-2' aria-controls="step-2" role="tab" data-toggle="tab").bike-stepwizard__link 
									i.fa.fa-check
								p.bike-stepwizard__option model

							li.bike-stepwizard__step(data-step-name="step-3")
								a(href='#step-3' aria-controls="step-3" role="tab" data-toggle="tab").bike-stepwizard__link.last-child
									i.fa.fa-check
								p.bike-stepwizard__option variant

						//START: Wizard Content

					.tab-content.clearfix
						#step-1.setup-content.tabpanel.tab-pane.active
							h3.bike-brand__title.text-center Select your Brand
							.bike-scrollbox
								.bike-brand__wrap
									.col-sm-4.col-xs-6.bike-brand__block
