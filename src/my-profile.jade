											.bike-brand__overlay
												svg.checkmark(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 52 52')
													circle.checkmark__circle(cx='26', cy='26', r='25', fill='none')
													path.checkmark__check(fill='none', d='M14.1 27.2l7.1 7.2 16.7-16.8')
									.col-sm-4.col-xs-6.bike-brand__block
										a(href='#').bike-brand__link.bike-next
											img(src='img/bike-brands/suzuki.png').bike-brand__image
											.bike-brand__overlay
												svg.checkmark(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 52 52')
													circle.checkmark__circle(cx='26', cy='26', r='25', fill='none')
													path.checkmark__check(fill='none', d='M14.1 27.2l7.1 7.2 16.7-16.8')
									.col-sm-4.col-xs-6.bike-brand__block
										a(href='#').bike-brand__link.bike-next
											img(src='img/bike-brands/royal-enfield-logo.png').bike-brand__image
											.bike-brand__overlay
